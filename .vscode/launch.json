{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) 启动",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "cpp_build",
      "program": "${workspaceFolder}/out/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "将反汇编风格设置为 Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "preLaunchTask": "cppbuild",
      "name": "Debug",
      "program": "${workspaceFolder}/out/${fileBasenameNoExtension}",
      "args": [],
      "env": {
        "ASAN_OPTIONS": "detect_leaks=0"
      },
      "cwd": "${workspaceFolder}",
      "expressions": "simple"
    }
  ]
}
