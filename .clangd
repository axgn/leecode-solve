# If: # 设置配置文件的使用条件
#   PathMatch: [.*\.h .*\.cpp]

CompileFlags: # 编译标志部分
  Add:
    ["-Wall" ,"-Wextra", "-std=c++20","-stdlib=libc++","-fsanitize=address,undefined"]
  Remove: ["-Werror"]
  Compiler: clang++ 
Diagnostics:
  ClangTidy: 
    Add: [ "performance-*"]
    Remove: ["clang-analyzer-*"]
  Suppress:
    - unused-includes
InlayHints:
  Enabled: true 
  ParameterNames: true
  DeducedTypes: true
  Designators: true 

Completion: 
  AllScopes: true 

